{
  "version": 2,
  "installCommand": "npm install",
  "buildCommand": "npm run build",

  "outputDirectory": "dist",

  "functions": {
    "dist/index.js": {
      "runtime": "@vercel/node"
    }
  },

  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/dist/index.js" 
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
