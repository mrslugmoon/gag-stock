{
  "version": 2,
  "installCommand": "npm install",
  "buildCommand": "npm run build", 

  "builds": [
    {
      "src": "dist/index.js",       
      "use": "@vercel/node"
    },
    {
      "src": "dist/**",            
      "use": "@vercel/static"
    }
  ],

  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "dist/index.js"      
    },
    {
      "src": "/(.*)",
      "dest": "dist/index.html"     
    }
  ]
}
