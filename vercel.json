{
  "version": 2,
  "installCommand": "npm install",
  "buildCommand": "npm run build-client",

  "functions": {
    "server/index.ts": {
      "runtime": "@vercel/node@3.0.0"
    }
  },

  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.ts" 
    },
    {
      "src": "/(.*)",
      "dest": "dist/index.html" 
    }
  ],

  "outputDirectory": "dist" 
}
