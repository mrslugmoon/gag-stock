{
  "version": 2,
  "installCommand": "npm install",
  "buildCommand": "npm run build",

  "outputDirectory": "dist",

  "functions": {
    "api/index.ts": {
      "runtime": "@vercel/node@4.0.0",
      "includeFiles": [
        "api/routes.ts",
        "shared/schema.ts" 
      ]
    }
  },

  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "dist/index.html"
    }
  ]
}
